{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "ignoreDeprecations": "6.0",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true
  },
  "include": [
    "frontend/src",
    "server",
    "scripts",
    "devtools"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}